<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:padding="4dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:background="@drawable/background_item_list">

    <TextView
        android:id="@+id/name_initial"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="8dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="L"
        android:textColor="@color/white"
        android:textSize="28dp"
        android:textStyle="bold"
        android:background="@drawable/background_image_contact"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/descritption"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/name_initial"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Luis Henrique"
            android:textColor="@color/black_gray"
            android:textSize="@dimen/medium_text"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/item_telephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="99991450705"
            android:textColor="@color/black_gray"
            android:textSize="@dimen/low_text"
            app:layout_constraintLeft_toLeftOf="@id/item_name"
            app:layout_constraintTop_toBottomOf="@id/item_name"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>